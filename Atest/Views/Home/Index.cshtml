@model IEnumerable<Atest.Models.DBtestUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Dashboard</h2>
<a class="btn btn-success" style="margin-bottom:10px;" onclick="Popupform('@Url.Action("AddSet","HOME")')"><i class="glyphicon glyphicon-plus"></i> Add Now</a>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Address
        </th>
        <th>
            Date of Birth
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthODate)
            </td>
            <td>
                <a class="btn btn-default btn-sm" onclick="Popupform('@Url.Action("AddSet","HOME" , new { id=item.Id })')"><i class="glyphicon glyphicon - pencil"></i> Edit</a>
                <a class="btn btn-danger btn-sm" onclick="Delete('@item.Id')" style='margin-left:5px;'><i class="glyphicon glyphicon - trash"></i> Delete</a>
            </td>
        </tr>
    }

</table>


@section scripts{
    <script>
        var Popup;
        function Popupform(url) {
            var formDiv = $('<div />');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Add Data',
                        height: 510,
                        width: 500,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            //dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }
        function Delete(id) {
            if (confirm('Delete this employee record?')) {
                $.ajax({
                    type: "Post",
                    url: '@Url.Action("Delete","HOME")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }
    </script>
}